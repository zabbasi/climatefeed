<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../partials/head'); %>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title></title>
    <link rel="stylesheet" href="/css/styles.css">
    <link href="https://fonts.googleapis.com/css2?family=Source+Sans+Pro&display=swap" rel="stylesheet">
</head>
<body>
    <header class="header">
        <div class="header__logo"></div>
        <%- include('../partials/header'); %>
    </header>


    <div id="home" style="display:block">
<!--
      <div class="home" id="newArticles">

        <h3>Article Feeds</h3>

      </div>

      <div class="home" id="twitterTweets">

        <h3>Climate Tweets</h3>

        

      </div>

      <div class="home" id="eventsNearMe">

        <h3>Events Near Me</h3>

      </div>
-->
      <div class="home" id="relatedNews">
        <h2> Top Climate Change News </h2>
        <div class="news">
            <% if(articles != null) { %>
              <% articles.forEach(function(article, index) { %>
                <% if(index < 10) { %>
                <table>
                  <tr>
                    <td>
                    <a href="<%- article.url %>" class="news__card">
                    
                        <img id='newsImages' src="<%- article.urlToImage %>" alt="<%- article.title %>" width='35%'>
                          <h3><%- article.title %></h3>
                          <p><%- article.description %></p>
                          </a>
                      </td>
                  </tr>
                </table>
                <% } %>
              <% }) %>
            <% } else { %>
                No posts found.
            <% } %>
        </div>

      </div>

    </div>




    <%- include('../partials/footer'); %> 
</body>
</html>
